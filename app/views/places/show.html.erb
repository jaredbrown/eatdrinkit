<p>
	<%= link_to 'Go Back', '#', :onclick => 'history.go(-1); return false;' %>
</p>

<h1>
	<b><%=h @venue['name'] %></b>
</h1>

<%=h @venue['address'] if @venue['address'] %> <%=h "(#{@venue['crossstreet']})" if @venue['crossstreet'] %>

<% if @deals.size > 0 %>
	<%= link_to 'Deals &raquo;', deals_path(:venue_id => params[:id]) %>
<% end %>

<p>
	<%= link_to image_tag('/images/review_button.png'), new_review_path(:venue_id => params[:id]) %>
</p>

<p>
	<%= link_to 'Make Reservation', 'http://www.opentable.com/', :target => '_new' %>
</p>

<% if @my_reviews and @my_reviews.size > 0 %>
	<h2>What You Had</h2>

	<%= render :partial => 'reviews/review', :collection => @my_reviews %>
<% end %>

<h2>What Other People Had</h2>

<% if @all_reviews.size > 0 %>
	<%= render :partial => 'reviews/review', :collection => @all_reviews %>
<% else %>
	No reviews yet
<% end %>
