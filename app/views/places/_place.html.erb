<div class="place">
	<%= image_tag place['primarycategory']['iconurl'], :class => 'icon' if place['primarycategory'] %>
	
	<div class="meta">
		<b><%= place['name'] %></b><br />
		<%= place['address'] if place['address'] %> <%= "(#{place['crossstreet']})" if place['crossstreet'] %><br />
		<%= place['distance'] %> meters away<br /> <%= @reviews[place['id']].liked_label %>
		<br />
		<%= link_to 'View details', place_path(place['id']) %>
	</div>
	
	<div style="clear: both;"></div>
</div>